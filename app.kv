#: import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    transition: NoTransition()
    StartScreen:
    LoginScreen:
        
    

<StartScreen>:
    name: "startScreen"

    Image:
        source: ("asset/img/bg.png")
    
    GridLayout:
        cols: 3
        Widget:
            
        GridLayout:
            cols: 1
            size_hint_x: None
            width: 350
            padding: 0

            Widget:
                size_hint_y: None
                height: 36

            Label:
                text: 'Welcome to CREALITS'
                color: (0, 0, 0)
                font_size: 35

            Widget:
                size_hint_y: None
                height: 35

            RoundedButton:
                background_color: (1,1,1, 0)
                size_hint_y: 0.7
                text: 'Log In'
                border: (20, 20, 20, 20)
                color: (0,0,0)
                on_release:
                    app.root.current = "loginScreen"

            Widget:
                size_hint_y: None
                height: 20
            
            RoundedButton:
                background_color: (1,1,1, 0)
                size_hint_y: 0.7
                text: 'Sign Up'
                border: (20, 20, 20, 20)
                color: (0,0,0)
                

            Widget:
                

        Widget:
            
<LoginScreen>
    name: "loginScreen"
    canvas.before:
        Color: 
            rgba: 85/255, 214/255, 190/255, 1
        Rectangle: 
            pos: self.pos
            size: self.size

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [5,5,5,5]
        spacing: 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            spacing: 5

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.2

                RoundedButton:
                    background_color: (252/255,100/255,113/255, 0)
                    size_hint_y: 0.9
                    text: 'Back'
                    border: (15, 15, 5, 15)
                    color: (1,1,1)
                    on_release:
                        app.root.current = "startScreen"

                Widget:
                    size_hint_y: 0.1

            Label:
                text: 'Login'
                font_size: 24
                color: [0, 0, 0, 1]
                canvas.before:
                    Color:
                        rgba: 255/255, 255/255, 255/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 0, 0]


        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 255/255, 255/255, 255/255, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 0, 15, 15]

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Username'
                    font_size: 18
                    color: [0,0,0,1]
                    halign: 'left'
                    text_size: root.width-40, 20

                TextInput:
                    id: login
                    multiline:False
                    font_size: 18
                    size: root.width-40, 20

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Password'
                    color: [0,0,0,1]
                    halign: 'left'
                    font_size: 18
                    text_size: root.width-40, 20

                TextInput:
                    id: password
                    multiline:False
                    password:True
                    font_size: 28

            BoxLayout:
                orientation: 'horizontal'

                Widget:
                    size_hint_x: 0.25

                RoundedButton:
                    background_color: (125/255,91/255,166/255, 0)
                    size_hint_x: 0.5
                    size_hint_y: 0.8
                    text: 'Login'
                    border: (10, 10, 10, 10)
                    color: (1,1,1)
                    font_size: 24

                    on_release: root.do_login(login.text, password.text)
                
                Widget:
                    size_hint_x: 0.25

<RoundedButton@Button>
    background_normal: ''
    canvas.before:
        Color: 
            rgb: root.background_color
            
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border